sudo apt-get update -y &&
sudo apt-get  upgrade -y &&

echo -e "Install PHP 7.2" &&
sudo add-apt-repository ppa:ondrej/php && 
sudo apt update &&
sudo apt install -y php7.2 &&



echo -e "Install PHP modules" &&
sudo apt install  php-xmlrpc php-intl php-curl php-gd php-jsonphp-mbstring php-xml &&



echo -e "Install Apache 2" &&
sudo apt install apache2 libapache2-mod-php7.2 && 




echo -e "Install MySQL" &&
sudo apt install libapache2-mod-php php-mysql mysql-server 



echo -e "Install MyphpmyadminSQL" &&
sudo apt install phpmyadmin
